@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="container">
    <h2>My Claim History</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Submit" class="btn btn-success">Submit New Claim</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Month</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Status</th>
                <th>Submitted</th>
                <th>Document</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ClaimMonth.ToString("MMM yyyy")</td>
                    <td>@item.HoursWorked</td>
                    <td>R @item.HourlyRate</td>
                    <td>R @item.TotalAmount</td>
                    <td>
                        <span class="badge @GetStatusBadgeClass(item.Status)">@item.Status</span>
                    </td>
                    <td>@item.SubmissionDate.ToString("dd MMM yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.FileName))
                        {
                            <span class="text-success">✓</span>
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ClaimId" class="btn btn-sm btn-outline-primary">View</a>
                        <!-- If Details doesn't work, try this alternative: -->
                        <!-- <a href="@Url.Action("Details", "Claims", new { id = item.ClaimId })" class="btn btn-sm btn-outline-primary">View</a> -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Pending" => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }
}