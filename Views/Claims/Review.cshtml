@model ContractMonthlyClaimSystem.Models.ReviewViewModel
@{
    ViewData["Title"] = "Automated Claim Review";
}

<div class="container">
    <h2><i class="fas fa-robot"></i> Automated Claim Review</h2>

    @if (TempData["AutoApprovedMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle"></i> @TempData["AutoApprovedMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Automation Controls -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cogs"></i> Hard-Coded Automation Controls
                    </h5>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="AutoVerifyAll" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-sync-alt"></i> Run Auto-Verification
                            </button>
                        </form>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-outline-success btn-sm" id="bulkApproveBtn">
                            <i class="fas fa-check-double"></i> Bulk Approve Safe Claims
                        </button>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="VerificationReport" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-chart-bar"></i> View Verification Report
                        </a>
                    </div>
                </div>
                        <div class="col-md-4">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i>
                                Hard-coded rules: Amount ≤ R15,000, Rate ≤ R800, Hours ≤ 160
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body text-center">
                    <h6 class="card-title">Pending Review</h6>
                    <h4 class="card-text">@Model.TotalClaims</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body text-center">
                    <h6 class="card-title">Auto-Approved</h6>
                    <h4 class="card-text">@Model.AutoApprovedClaims</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body text-center">
                    <h6 class="card-title">High Risk</h6>
                    <h4 class="card-text">@Model.HighRiskClaims</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <h6 class="card-title">Ready for Bulk</h6>
                    <h4 class="card-text">@Model.ReadyForBulkApproval</h4>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.VerificationResults.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No claims pending review.
        </div>
    }
    else
    {
        <form id="bulkApproveForm" asp-action="BulkApprove" method="post">
            @Html.AntiForgeryToken()

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><input type="checkbox" id="selectAll" /></th>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Hours | Rate</th>
                            <th>Total</th>
                            <th>Risk Level</th>
                            <th>Auto Status</th>
                            <th>Flags</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.VerificationResults)
                        {
                            var claim = item.OriginalClaim;
                            <tr class="@(item.IsHighRisk ? "table-danger" : item.IsMediumRisk ? "table-warning" : "")">
                                <td>
                                    @if (item.IsAutoApprovable && claim.Status == "Pending")
                                    {
                                        <input type="checkbox" name="claimIds" value="@claim.ClaimId" class="claim-checkbox" />
                                    }
                                </td>
                                <td>@claim.LecturerName</td>
                                <td>@claim.ClaimMonth.ToString("MMM yyyy")</td>
                                <td>
                                    <small>@claim.HoursWorked hrs</small><br />
                                    <small>R @claim.HourlyRate/hr</small>
                                </td>
                                <td><strong>R @claim.TotalAmount.ToString("F2")</strong></td>
                                <td>
                                    <span class="badge @(item.IsHighRisk ? "bg-danger" : item.IsMediumRisk ? "bg-warning" : "bg-success")">
                                        @item.RiskLevel
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(item.VerificationStatus == "Auto-Approved" ? "bg-success" :
                                                                                                 item.VerificationStatus == "Recommended for Approval" ? "bg-info" :
                                                                                                 "bg-warning text-dark")">
                                @item.VerificationStatus
                            </span>
                        </td>
                        <td>
                            @if (item.HasFlags)
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-warning"
                                                data-bs-toggle="tooltip" data-bs-placement="top"
                                                title="@item.ReviewNotes">
                                            <i class="fas fa-flag"></i> @item.VerificationFlags
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-success"><i class="fas fa-check"></i> No Flags</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <form asp-action="Approve" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@claim.ClaimId" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Approve
                                            </button>
                                        </form>
                                        <form asp-action="Reject" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@claim.ClaimId" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-times"></i> Reject
                                            </button>
                                        </form>
                                        <a asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Select all checkbox
            $('#selectAll').change(function () {
                $('.claim-checkbox').prop('checked', this.checked);
            });

            // Bulk approve button
            $('#bulkApproveBtn').click(function () {
                const selectedCount = $('.claim-checkbox:checked').length;
                if (selectedCount === 0) {
                    alert('Please select at least one claim for bulk approval.');
                    return;
                }

                if (confirm(`Approve ${selectedCount} selected claims?`)) {
                    $('#bulkApproveForm').submit();
                }
            });
        });
    </script>
}