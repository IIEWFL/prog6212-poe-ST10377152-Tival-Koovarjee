@model ContractMonthlyClaimSystem.Models.VerificationReportViewModel
@{
    ViewData["Title"] = "Verification Report";
}

<div class="container">
    <h2><i class="fas fa-chart-bar"></i> Automated Verification Report</h2>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Claims</h5>
                    <h2 class="card-text">@Model.TotalClaims</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <h5 class="card-title">Auto-Approved</h5>
                    <h2 class="card-text">@Model.AutoApprovedClaims</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body text-center">
                    <h5 class="card-title">Manual Review</h5>
                    <h2 class="card-text">@Model.ManualReviewClaims</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body text-center">
                    <h5 class="card-title">High Risk</h5>
                    <h2 class="card-text">@Model.HighRiskClaims</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Report -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Claim Verification Details</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Risk Level</th>
                            <th>Auto Status</th>
                            <th>Flags</th>
                            <th>Submission Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.VerificationResults)
                        {
                            var claim = result.OriginalClaim;
                            <tr>
                                <td>@claim.ClaimId</td>
                                <td>@claim.LecturerName</td>
                                <td>R @claim.TotalAmount.ToString("F2")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(claim.Status)">
                                        @claim.Status
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @GetRiskBadgeClass(result.RiskLevel)">
                                        @result.RiskLevel
                                    </span>
                                </td>
                                <td>@result.VerificationStatus</td>
                                <td>@result.VerificationFlags</td>
                                <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Review" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Review
        </a>
        <button class="btn btn-success" onclick="window.print()">
            <i class="fas fa-print"></i> Print Report
        </button>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Pending" => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }

    public string GetRiskBadgeClass(string riskLevel)
    {
        return riskLevel switch
        {
            "High" => "bg-danger",
            "Medium" => "bg-warning",
            "Low" => "bg-success",
            _ => "bg-secondary"
        };
    }
}