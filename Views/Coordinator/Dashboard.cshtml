@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="container">
    <h2>Claims for Review</h2>
    <p class="text-muted">Approve or reject pending claims from lecturers.</p>

    <div class="row mt-4">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer</th>
                        <th>Date Submitted</th>
                        <th>Month</th>
                        <th>Hours</th>
                        <th>Total (R)</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1002</td>
                        <td>Dr. Smith</td>
                        <td>01 Mar 2025</td>
                        <td>February 2025</td>
                        <td>35</td>
                        <td>21,000.00</td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-success" disabled>Approve</button>
                            <button type="button" class="btn btn-sm btn-outline-danger" disabled>Reject</button>
                        </td>
                    </tr>
                    <tr>
                        <td>1003</td>
                        <td>Prof. Jones</td>
                        <td>02 Mar 2025</td>
                        <td>February 2025</td>
                        <td>42</td>
                        <td>25,200.00</td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-success" disabled>Approve</button>
                            <button type="button" class="btn btn-sm btn-outline-danger" disabled>Reject</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>