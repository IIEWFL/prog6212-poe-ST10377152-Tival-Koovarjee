@model List<ContractMonthlyClaimSystem.Models.LecturerSummary>
@{
    ViewData["Title"] = "Lecturer Management";
}

<div class="container">
    <h2><i class="fas fa-users"></i> Lecturer Management</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No lecturer data available.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Lecturer Name</th>
                        <th>Total Claims</th>
                        <th>Approved Claims</th>
                        <th>Total Amount</th>
                        <th>Last Submission</th>
                        <th>Approval Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lecturer in Model)
                    {
                        var approvalRate = lecturer.TotalClaims > 0 ?
                        (lecturer.ApprovedClaims * 100.0 / lecturer.TotalClaims) : 0;

                        <tr>
                            <td><strong>@lecturer.Name</strong></td>
                            <td>@lecturer.TotalClaims</td>
                            <td>@lecturer.ApprovedClaims</td>
                            <td><strong>R @lecturer.TotalAmount.ToString("F2")</strong></td>
                            <td>@lecturer.LastSubmission.ToString("dd MMM yyyy")</td>
                            <td>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar @GetProgressBarClass(approvalRate)"
                                         role="progressbar"
                                         style="width: @approvalRate%;"
                                         aria-valuenow="@approvalRate"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        @approvalRate.ToString("F1")%
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Summary</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Total Lecturers:</strong> @Model.Count</p>
                        <p><strong>Highest Earner:</strong> @Model.OrderByDescending(l => l.TotalAmount).First().Name</p>
                        <p><strong>Most Active:</strong> @Model.OrderByDescending(l => l.TotalClaims).First().Name</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@functions {
    public string GetProgressBarClass(double rate)
    {
        return rate switch
        {
            >= 80 => "bg-success",
            >= 50 => "bg-warning",
            _ => "bg-danger"
        };
    }
}