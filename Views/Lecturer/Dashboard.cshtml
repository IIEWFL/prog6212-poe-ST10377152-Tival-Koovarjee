@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container">
    <h2>Welcome, Dr. Smith</h2>
    <p class="text-muted">Here you can manage your monthly claims.</p>

    <div class="row mt-4">
        <div class="col-md-12">
            <a asp-action="SubmitClaim" class="btn btn-success mb-3">+ Submit New Claim</a>

            <h4>Your Claim History</h4>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Date Submitted</th>
                        <th>Month</th>
                        <th>Hours</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1001</td>
                        <td>01 Feb 2025</td>
                        <td>January 2025</td>
                        <td>40</td>
                        <td>R 24,000.00</td>
                        <td><span class="badge bg-success">Approved</span></td>
                    </tr>
                    <tr>
                        <td>1002</td>
                        <td>01 Mar 2025</td>
                        <td>February 2025</td>
                        <td>35</td>
                        <td>R 21,000.00</td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>