@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="container">
    <h2>Submit a New Monthly Claim</h2>
    <hr />

    <form>
        <!-- This form is NON-FUNCTIONAL for the prototype -->
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="claimMonth" class="form-label">Claim Month</label>
                    <input type="month" class="form-control" id="claimMonth" name="claimMonth">
                </div>

                <div class="mb-3">
                    <label for="hoursWorked" class="form-label">Hours Worked</label>
                    <input type="number" class="form-control" id="hoursWorked" name="hoursWorked" placeholder="e.g., 40">
                </div>

                <div class="mb-3">
                    <label for="hourlyRate" class="form-label">Hourly Rate (R)</label>
                    <input type="text" class="form-control" id="hourlyRate" name="hourlyRate" value="600" readonly>
                    <div class="form-text">Your approved hourly rate.</div>
                </div>

                <div class="mb-3">
                    <label for="totalAmount" class="form-label">Total Amount (R)</label>
                    <input type="text" class="form-control" id="totalAmount" name="totalAmount" value="0.00" readonly>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label for="notes" class="form-label">Notes (Optional)</label>
                    <textarea class="form-control" id="notes" name="notes" rows="4"></textarea>
                </div>

                <div class="mb-3">
                    <label for="supportingDoc" class="form-label">Upload Supporting Document</label>
                    <input type="file" class="form-control" id="supportingDoc" name="supportingDoc" disabled>
                    <div class="form-text">Simulated upload. Functionality will be added later. (PDF, DOCX, XLSX)</div>
                </div>
            </div>
        </div>

        <button type="button" class="btn btn-primary" disabled>Submit Claim</button>
        <a asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <!-- Simple client-side calculation for demonstration only -->
    <script>
        $(document).ready(function () {
            $('#hoursWorked').on('input', function () {
                let hours = parseFloat($(this).val()) || 0;
                let rate = parseFloat($('#hourlyRate').val()) || 0;
                let total = hours * rate;
                $('#totalAmount').val(total.toFixed(2));
            });
        });
    </script>
}